<script>

    function Delete(id) {


        var url = "/Action_Move/Remove_Gallery_Image";

        var request = $.ajax({

            url: url,
            data: { id: id },
        })

        request.done(function (msg) {

            if (msg == "True") {
                var Id = '#' + id;
                $(Id).hide()


            }




        });

    }
</script>
